{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=PS_TennisBookings;Integrated Security=True"
  },

  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },

  "AllowedHosts": "*",

  "Membership": {
    "MonthlyMembershipFullPrice": 25
  },

  "ClubSettings": {
    "PeakStartHour": 16,
    "PeakEndHour": 20,
    "OpenHour": 7,
    "CloseHour": 22,
    "WinterCourtStartHour": 9,
    "WinterCourtEndHour": 15,
    "WinterMonths": [ 1, 2, 3, 10, 11, 12 ]
  },

  "CourtBookings": {
    "MaxRegularBookingLengthInHours": 3,
    "MaxPeakBookingLengthInHours": 2
  },
  "Features": {
    "HomePage": {
      "EnableGreeting": true,
      "EnableWeatherForecast": true,
     // "ForecastSectionTitle": "The weather is..."
    },
    "WeatherForecasting": {
      "EnableWeatherForecast": true
    },
    "Greeting": {
      "GreetingColour":  "#000000" 
    } 
  },
  "ExternalServices": {
    "WeatherApi": {
      "Url": "http://localhost:62855",
      "MinsToCache": 10
    },
    "ProductsApi": {
      //"Url": "http://localhost:62856",
      "MinsToCache": 1
    }
  } 
